<h1>Użytkownik <%= @user.email %></h1>

<p>
  <b>Adres e-mail:</b>
  <%= @user.email if @user.email %>
</p>

<p>
  <b>Superadmin:</b>
  <%= @user.is_superadmin ? "Tak" : "Nie" %>
</p>

<p>
  <b>Zablokowany:</b>
  <%= @user.is_blocked ? "Tak" : "Nie" %>
</p>

<p>
  <b>Przypisane grupy:</b><br/>
  <% if @user.groups.each do |g| %>
    <%= g.name %><br />
  <% end.empty? %>
    Brak przypisanych grup
  <% end %>
</p>

<p>
  <b>Przypisane drużyny:</b><br/>
  <% if @user.units.each do |u| %>
    <%= u.name %><br />
  <% end.empty? %>
    Brak przypisanych drużyn
  <% end %>
</p>

<!--%= debug @user %-->
<p>
  <%= link_to 'Edytuj', edit_user_path(@user), :accesskey => 'e' %> |
  <%= link_to 'Nowy użytkownik', new_user_path, :accesskey => 'n' %> |
  <%= link_to 'Lista', users_path, :accesskey => 'l' %>
</p>
