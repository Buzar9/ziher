<style type="text/css">
table.users tr.invited td { color: #aaa; }
</style>

<div class="row">
  <div class="span10">
    <h3>Administracja &gt; Użytkownicy</h3>
  </div>
  <div class="span2">
    <div class="pull-right top-buffer-20">
      <% if can? :create, User %>
        <%= link_to 'Nowy użytkownik', new_user_path, class: "btn btn-small btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<table class="users table table-condensed top-buffer-20">
  <tr>
    <th>E-mail</th>
    <th>Imię</th>
    <th>Nazwisko</th>
    <th>Telefon</th>
    <th class="text-center">Status</th>
    <% if can? :set_superadmin, @user %>
      <th class="text-center">Superadmin</th>
    <% end %>
    <th class="text-center">Zablokowany</th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= user.status %>">
    <td><%= link_to user.email, user %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.phone %></td>
    <td class="text-center"><%= I18n.t(user.status) %></td>
    <% if can? :set_superadmin, @user %>
      <td><%= render_boolean_icon_centered(user.is_superadmin) %></td>
    <% end %>
    <td><%= render_boolean_icon_centered(user.is_blocked) %></td>
  </tr>
<% end %>
</table>
