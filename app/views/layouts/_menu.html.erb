<div class="row">
  <div class="span12">
    <ul class="nav nav-pills">
      <li class=""><%= link_to root_path, class: 'muted' do %> <i class='icon-home'></i> ZiHeR <% end %></li>

      <li class=""><%= link_to "Książka finansowa", default_finance_journal_path, class: "muted" %></li>
      <li class=""><%= link_to "Książka bankowa", default_bank_journal_path, class: "muted" %></li>

      <li class="<%= 'active' if current_page?(inventory_entries_path) %>"> <%= link_to "Książka inwentarzowa", inventory_entries_path, class: "muted" %> </li>
      <li class="dropdown">
        <a class="dropdown-toggle muted" data-toggle="dropdown" href="#"> Administracja <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li class="<%= 'active' if current_page?(units_path) %>"> <%= link_to "Drużyny", units_path %> </li>
          <li class="<%= 'active' if current_page?(groups_path) %>"> <%= link_to "Grupy", groups_path %> </li>
          <% if can? :manage, Category %><li class="<%= 'active' if current_page?(categories_path) %>"> <%= link_to "Kategorie", categories_path %> </li><% end %>
          <% if can? :manage, Journal %><li class="<%= 'active' if current_page?(journals_path) %>"> <%= link_to "Książki", journals_path %> </li><% end %>
          <% if can? :manage, JournalType %><li class="<%= 'active' if current_page?(journal_types_path) %>"> <%= link_to "Rodzaje książek", journal_types_path %> </li><% end %>
          <% if current_user != nil && current_user.can_manage_any_user %><li class="<%= 'active' if current_page?(users_path) %>"> <%= link_to "Użytkownicy", users_path %> </li><% end %>
        </ul>
      </li>

      <% if user_signed_in? %>
        <li class="pull-right">
          <%= link_to destroy_user_session_path, :method => :delete, class: "muted" do %>
            <%= current_user.email %> - <i class='icon-off'></i>&nbsp;Wyloguj się
          <%end%>
        </li>
      <% end %>

    </ul>
  </div>
</div>

<div class="row">
  <div class="span6">
  </div>
  <div class="span6">
    <div class="pull-right">
      <%= yield :journal_select %>
    </div>
  </div>
</div>
