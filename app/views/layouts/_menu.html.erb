          <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Administracja <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% if current_user != nil && current_user.can_manage_any_user %><li class="<%= menu_active?(:users) %>"> <%= link_to "Użytkownicy", users_path %> </li><% end %>
            <li class="<%= menu_active?(:units) %>"> <%= link_to "Drużyny", units_path %> </li>
            <li class="<%= menu_active?(:groups) %>"> <%= link_to "Grupy", groups_path %> </li>
            <li class="divider"></li>
