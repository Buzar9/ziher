<div class="row">
  <div class="span12">
    <ul class="nav nav-pills">
      <li class=""><%= link_to root_path do %> <i class='icon-home'></i> ZiHeR <% end %></li>

      <% JournalType.all.each do |journal_type| %>
        <% journal = Journal.find_current_for_type(journal_type) %>
        <% if journal %>
          <li class="<%= 'active' if current_page?(journal_path(Journal.find_current_for_type(journal_type))) %>">
            <%= link_to journal_type.name, journal_path(Journal.find_current_for_type(journal_type)) %>
          </li>
        <% end %>
      <% end %>

      <li class="<%= 'active' if current_page?(inventory_entries_path) %>"> <%= link_to "Książka inwentarzowa", inventory_entries_path %> </li>
      <li class="<%= 'active' if current_page?(units_path) %>"> <%= link_to "Drużyny", units_path %> </li>
      <li class="<%= 'active' if current_page?(groups_path) %>"> <%= link_to "Grupy", groups_path %> </li>
      <li class="<%= 'active' if current_page?(categories_path) %>"> <%= link_to "Kategorie", categories_path %> </li>
      <li class="<%= 'active' if current_page?(journals_path) %>"> <%= link_to "Książki", journals_path %> </li>
      <li class="<%= 'active' if current_page?(journal_types_path) %>"> <%= link_to "Rodzaje książek", journal_types_path %> </li>

      <% if can? :read, User %>
        <li class="<%= 'active' if current_page?(users_path) %>"> <%= link_to "Użytkownicy", users_path %> </li>
      <% end %>

    </ul>
  </div>
</div>

<div class="row">
  <div class="span3 offset9">
    <ul class="nav nav-pills">
      <% if user_signed_in? %>
        <li class="pull-right"><%= link_to destroy_user_session_path, :method => :delete do %><%= current_user.email %> - <i class='icon-off'></i>Wyloguj się<%end%></li>
      <% end %>
    </ul>
  </div>
</div>
