<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span6">
      <div class="field">
        <%= f.label :data %>
        <%= f.text_field :date %>
      </div>
      <div class="field">
        <%= f.label :Treść %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :Numer_dokumentu %>
        <%= f.text_field :document_number %>
      </div>

      <%= f.fields_for :items do |item_fields| %>
        <div class="row">
          <% category_name = item_fields.object.category.name %>

          <div class="span3">
            <% #item amount %>
            <%= item_fields.label :amount, category_name %>
            <%= item_fields.text_field :amount, :class=>"category" %>
          </div>

          <% if @entry.is_expense then %>
            <div class="span3">
              <% #item amount one percent %>
              <%= item_fields.label :amount_one_percent, "1%" %>
              <%= item_fields.text_field :amount_one_percent, :class=>"category" %>
            </div>
          <% end %>

          <%= item_fields.hidden_field :category_id, :class=>"category_id"%>
        </div>
      <% end %>

      <%= f.hidden_field :journal_id, :value => @journal.id %>
      <%= f.hidden_field :is_expense, :value => @entry.is_expense %>
    </div>

    <div class="span6">
      <input type="checkbox" id="is_linked" onchange="isLinkedChanged(this)"/>
      <label for="is_linked">Przenieś do innej książki</label>
      <% @other_journals = Journal.all %><!%-- TODO: ktore ksiazki powinny sie tu pokazywac --%>
      <%= select_tag "journals", options_from_collection_for_select(@other_journals, "id", "journal_type"), :onchange => 'journalChanged()', :style => "display: none" %>

      <% @other_journals.each do |journal| %>
        <% @categories = Category.find_by_year_and_type(journal.year, !@entry.is_expense) %>
        <div class="journal-categories" id="journal-<%=journal.id%>" style="display:none">
          <% @categories.each do |category| %>
            <%= category.name %> <input type="text"><br/>
          <% end %>
          <br/><br/>
        </div>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Zapisz"%>
  </div>
<% end %>
