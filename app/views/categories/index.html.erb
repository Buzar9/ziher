<h1>Kategorie</h1>

<form method="GET">
  <%= select_tag "year", options_for_select(@years, @year) %>
  <%= submit_tag I18n.t('search') %>
</form>

<br/>

<% expenses = {:label => I18n.t(:expenses), :data => Category.find_by_year_and_type(@year, true)} %>
<% incomes = {:label => I18n.t(:incomes), :data => Category.find_by_year_and_type(@year, false)} %>

<% [expenses, incomes].each do |categories| %>
<div>
  <%= categories[:label] %>
  <ul class="categories">
  <% categories[:data].each do |category| %>
    <li id="category_<%= category.id %>">
      <span class="handle">[drag] </span><%= category.name %>
    </li>
  <% end %>
  </ul>
</div>
<% end %>

<br />

<%= link_to 'Nowa kategoria', new_category_path %>
