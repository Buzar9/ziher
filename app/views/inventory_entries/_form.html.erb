<%= form_for(@inventory_entry) do |f| %>
  <% if @inventory_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inventory_entry.errors.count, "error") %> prohibited this inventory_entry from being saved:</h2>

      <ul>
      <% @inventory_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span6">
      <div class="field">
        <%= f.label :data %>
        <%= f.text_field :date %>
      </div>
      <div class="field">
        <%= f.label :nazwa %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :numer_dokumentu %>
        <%= f.text_field :document_number %>
      </div>
      <div class="field">
        <%= f.label :ilość %>
        <%= f.number_field :amount %>
      </div>
      <div class="field">
        <%= f.label :wartość%>
        <%= f.text_field :total_value %>
      </div>
      <div class="field">
        <%= f.label :Źródło %>
        <%= f.text_field :source %>
      </div>
      <div class="field">
        <%= f.label :numer_inwentarzowy %>
        <%= f.text_field :stock_number %>
      </div>
      <div class="actions">
        <%= f.submit "Zapisz"%>
      </div>
    </div>
  </div>
  <%= f.hidden_field :unit_id, :value => @unit.id %>
  <%= f.hidden_field :is_expense, :value => @inventory_entry.is_expense %>
<% end %>
