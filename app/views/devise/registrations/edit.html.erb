<h2><%= t "devise.registrations.edit.title" %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="row col-md-9">
      <div class="col-md-6">

        <div class="well col-md-12">
          <div class="field col-md-12">
            <%= f.label :email, class: "col-md-2 text-right" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="field col-md-12">
            <%= f.label :first_name, class: "col-md-2 text-right" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>

          <div class="field col-md-12">
            <%= f.label :last_name, class: "col-md-2 text-right" %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>

          <div class="field col-md-12">
            <%= f.label :phone, class: "col-md-2 text-right" %>
            <%= f.text_field :phone, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well col-md-12">
          <div class="field col-md-12">
            <%= f.label :password %> <i><%= t "devise.registrations.edit.new_password_info" %></i>
            <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
          </div>

          <div class="field col-md-12 top-buffer-20">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row col-md-9">
      <div class="col-md-6">
        <div class="well col-md-12">
          <div class="field col-md-12">
            <%= f.label :current_password %> <i><%= t "devise.registrations.edit.current_password_info" %></i><br/>
            <%= f.password_field :current_password, class: "form-control" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit t("devise.registrations.edit.submit_button"), class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
  </div>

<% end %>