<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
        <div class='form-group'>
          <%= f.email_field :email, :placeholder => I18n.t('helpers.label.user.email'), :class => "form-control" %>
        </div>

        <div class='form-group'>
          <%= f.password_field :password, :placeholder => I18n.t('helpers.label.user.password'), :class => "form-control" %>
        </div>

        <div class="form-group">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, :class=>"checkbox-inline" %>
            <% end %>
            <%= f.submit "Zaloguj siÄ™", :class => 'btn btn-success pull-right' %>
          </div>

        <div class='form-group' style="margin-top: 60px">
          <%= render "links" %>
        </div>
    <% end %>
  </div>
</div>
<br/>