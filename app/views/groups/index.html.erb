<h3>Administracja > Grupy jednostek</h3>

<div class="row top-buffer-40">
  <div class="span12">
    <table class="table table-hover ">
      <thead>
        <tr>
          <th>Nazwa grupy</th>
          <th>Ilość jednostek</th>
          <th>Ilość użytkowników</th>
        </tr>
      </thead>
      <tbody>
    <% if @groups.each do |group| %>
          <tr>
            <td><div class="text-center"><%= link_to group.name, group %></div></td>
            <td>
              <div class="text-center" title="<%= group.units.map { |unit| unit.name }.join("\n") %>">
                <%= group.units.count %>
              </div>
            </td>
            <td>
              <div class="text-center" title="<%= group.users.map { |user| user.name }.join("\n") %>">
                <%= group.users.count %>
              </div>
            </td>
          </tr>
      <% end.empty? %>
        <tr>
          <td colspan="3">Brak grup.</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row top-buffer-40">
  <div class="span12">
    <%= link_to 'Utwórz nową grupę', new_group_path, class: "btn btn-small btn-primary" %>
  </div>
</div>